<header class="absolute top-5 right-2 md:right-8">
    <div class="flex items-center text-white">
        <%= link_to "javascript:history.back()", onclick: "ahoy.track('navigation:go_back')", title: "Go Back", class: "z-20 bg-black rounded-full p-2 pr-2 mr-2 md:mr-5 hover:scale-125 transition transform duration-100 ease-out border-2 border-gray-400" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 md:h-6 md:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
            </svg>
        <% end %>
        <%= link_to "javascript:history.forward()", onclick: "ahoy.track('navigation:go_forward')", title: "Go Forward", class: "z-20 bg-black rounded-full p-2 pr-2 mr-2 md:mr-5 hover:scale-125 transition transform duration-100 ease-out border-2 border-gray-400" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 md:h-6 md:w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
        <% end %>
        <div data-controller="dropdown" class="z-20 flex items-center bg-black rounded-full p-1 md:p-2 pr-2 border-2 border-gray-400">
            <div class="relative">
                <button type="button" data-action="dropdown#toggle click@window->dropdown#hide" class="inline-flex justify-center w-full rounded-md shadow-sm px-4 py-2 text-sm md:text-md font-medium focus:outline-none">
                    <h2><%= current_user.username %></h2>
                    <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                </button>
                <div data-dropdown-target="menu" class="hidden origin-top-right absolute right-0 mt-4 w-52 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" data-transition-enter-from="opacity-0 scale-95" data-transition-enter-to="opacity-100 scale-100" data-transition-leave-from="opacity-100 scale-100" data-transition-leave-to="opacity-0 scale-95">
                    <div class="py-1" role="none">
                        <%= button_to destroy_user_session_path, method: :delete, data: { turbo: false }, class: "text-gray-700 block px-4 py-2 text-sm md:text-md", role: "menuitem", tabindex: "-1", id: "menu-item-0" do %>
                            <div class="flex items-center">
                                <div class="opacity-90 hover:opacity-80">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hover:scale-125 transition transform duration-100 ease-out" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                                    </svg>
                                </div>
                                <h2 class="pl-4">Sign Out</h2>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>