<div class="flex flex-col bg-black text-gray-300 font-medium text-sm md:text-md border-r border-gray-900 overflow-y-scroll scrollbar-hide h-screen w-28 md:w-40 lg:w-60 xl:w-80 flex-shrink-0 inline-flex pb-80">
    <%= image_tag('podify-logo-black.png', alt: '') %>
    <div class="pl-2 md:pl-5 pr-2 md:pr-5 space-y-4">
        <hr class="border-t-[0.1px] border-gray-700" />
        <button class="flex items-center space-x-1 md:space-x-2 hover:text-green-500" remote="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <%= link_to(root_path) do %>
                <p class="<%= current_path_selected(root_path) %>">Home</p>
            <% end %>
        </button>
        <hr class="border-t-[0.1px] border-gray-700" />
        <button class="flex items-center space-x-1 md:space-x-2 hover:text-green-500" remote="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z" />
            </svg>
            <%= link_to(liked_episodes_path) do %>
                <p class="<%= current_path_selected(liked_episodes_path) %>">Episodes</p>
            <% end %>
        </button>
        <button class="flex items-center space-x-1 md:space-x-2 hover:text-green-500" remote="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                <path d="M18 9.5a1.5 1.5 0 11-3 0v-6a1.5 1.5 0 013 0v6zM14 9.667v-5.43a2 2 0 00-1.105-1.79l-.05-.025A4 4 0 0011.055 2H5.64a2 2 0 00-1.962 1.608l-1.2 6A2 2 0 004.44 12H8v4a2 2 0 002 2 1 1 0 001-1v-.667a4 4 0 01.8-2.4l1.4-1.866a4 4 0 00.8-2.4z" />
            </svg>
            <%= link_to(disliked_episodes_path) do %>
                <p class="<%= current_path_selected(disliked_episodes_path) %>">Episodes</p>
            <% end %>
        </button>
        <hr class="border-t-[0.1px] border-gray-700" />
        <button class="flex items-center space-x-1 md:space-x-2 hover:text-green-500" remote="true">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                <path fill-rule="evenodd" d="M6.32 2.577a49.255 49.255 0 0111.36 0c1.497.174 2.57 1.46 2.57 2.93V21a.75.75 0 01-1.085.67L12 18.089l-7.165 3.583A.75.75 0 013.75 21V5.507c0-1.47 1.073-2.756 2.57-2.93z" clip-rule="evenodd" />
            </svg>
            <%= link_to(feedback_path) do %>
                <p class="<%= current_path_selected(feedback_path) %>">Your Feedback</p>
            <% end %>
        </button>
        <hr class="border-t-[0.1px] border-gray-700" />
        <button class="hidden md:flex items-center md:space-x-2 cursor-default">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" fill="none" viewBox="0 0 20 20" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
            </svg>
            <p>Your Playlists</p>
        </button>
        <div class="flex flex-col">
            <div id="playlists">
                <%= render list_playlists %>
            </div>
        </div>
        <%= button_to(playlists_path, method: :create, class: 'flex items-center space-x-2 hover:text-green-500') do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
            </svg>
            <p>Create New Playlist</p>
        <% end %>
    </div>
</div>
