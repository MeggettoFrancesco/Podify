<div id="<%= dom_id comment %>">
    <div class="grid grid-cols-6 md:grid-cols-8 lg:grid-cols-12 text-gray-300 py-4 px-2 md:px-5 hover:bg-gray-700 rounded-lg">
        <div class="flex items-center space-x-2 md:space-x-4 col-span-3 lg:col-span-5">
            <%= link_to episode_path(comment.episode) do %>
                <div class="flex items-center space-x-2 md:space-x-4 pr-3 cursor-pointer">
                    <img class="hidden lg:inline h-10 w-10" src=<%= url_for(comment.episode.image) %> alt="" />
                    <div>
                        <p class="break-all text-sm lg:text-lg w-18 text-white"><%= comment.episode.episode_name %></p>
                    </div>
                </div>
            <% end %>
        </div>
        <div class="flex items-center justify-between pr-3 col-span-2 md:col-span-3 lg:col-span-5">
            <p class="break-all w-50 text-sm lg:text-lg text-white"><%= comment.description %></p>
        </div>
        <div class="hidden md:flex items-center justify-between">
            <% comment.rating.times do %>
                <svg aria-hidden="true" class="w-8 h-8 text-yellow-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
            <% end %>
            <% (5 - comment.rating).times do %>
                <svg aria-hidden="true" class="w-8 h-8 text-gray-300 dark:text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
            <% end %>
        </div>
        <div class="flex items-center justify-end">
            <%= button_to edit_comment_path(episode_id: comment.episode.id, id: comment.id), method: :get, form: { data: { turbo_frame: 'commentmodal' },  title: 'Modify Comment' } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="fill-green-500 h-6 w-6 md:h-8 md:w-8 cursor-pointer hover:scale-125 transition transform duration-100 ease-out" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
            <% end %>
            <%= button_to comment_path(episode_id: comment.episode.id, id: comment.id), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' }, title: 'Delete Feedback' } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="fill-red-500 h-6 w-6 md:h-8 md:w-8 cursor-pointer hover:scale-125 transition transform duration-100 ease-out" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
            <% end %>
        </div>
    </div>
</div>
