<div id="<%= dom_id playlist %>">
    <div class="flex items-center justify-start md:gap-1 pt-4 flex-row md:flex-row">
            <%= button_to edit_playlist_path(playlist), method: :get, form: { data: { turbo_frame: 'renameplaylistmodal' },  title: 'Rename Playlist' } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="fill-green-500 h-6 w-6 cursor-pointer hover:scale-125 transition transform duration-100 ease-out" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
            <% end %>
            <%= button_to playlist_path(playlist), method: :delete, form: { data: { turbo_confirm: 'Are you sure?' }, title: 'Delete Playlist' } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="fill-red-500 h-6 w-6 cursor-pointer hover:scale-125 transition transform duration-100 ease-out" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
            <% end %>
        <div class="pl-1 md:pl-2">
            <%= link_to playlist_path(playlist) do %>
                <% text_colour = @selected_playlist == playlist ? 'text-green-500 font-bold' : '' %>
                <p class="truncate sm:max-w-[9rem] lg:max-w-[12rem] <%= text_colour %> hover:text-green-500 <%= current_path_selected(playlist_path(playlist)) %>"><%= playlist.name %></p>
            <% end %>
        </div>
    </div>
</div>
