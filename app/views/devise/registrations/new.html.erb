<div class="h-screen overflow-hidden">
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
            <%= image_tag('podify-logo-white.png', class: 'h-48 w-54', alt: '') %>
            <h3 class="text-2xl font-bold text-center">Sign Up</h3>
            <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <div class="mt-6">
                    <%= f.label :username, 'Username', class: "block mb-2 text-md font-large text-gray-900 dark:text-gray-300" %>
                    <%= f.text_field :username, autofocus: true, class: "bg-gray-50 border border-gray-300 text-gray-900 text-md rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: true %>
                </div>
                <div class="actions mt-6">
                    <%= f.submit "Sign Up", data: {turbo: false}, class: "cursor-pointer font-extrabold text-white bg-green-500 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-md text-lg w-full px-5 py-2.5 text-center dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-800" %>
                </div>
            <% end %>
            <%= render "devise/shared/links" %>
            <div class="flex justify-center italic truncate text-sm md:text-md pt-6">
                Â© <%= Date.current.year %>&nbsp;<a href="mailto:yashar.moshfeghi@strath.ac.uk">NeuraSearch Laboratory</a>. All Rights Reserved.
            </div>
        </div>
    </div>
</div>
